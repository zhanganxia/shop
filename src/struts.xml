<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>
	<!-- 开发模式，在修改Struts配置文件的时候不需要重启容器 -->
	<constant name="struts.devMode" value="true"/>
	<package name="shop" extends="json-default">
	
	<global-results>
		<result name="aindex">/WEB-INF/main/aindex.jsp</result>
	</global-results>
	<!-- category_update.action：访问update方法 -->
	<!-- category_save.action -->
	<!-- class对应的是Spring中配置该Action的id值，因为要交给Spring来管理 -->
		<action name="category_*" class="categoryAction" method="{1}">
			<result name="index">/index.jsp</result>
			<!-- 必须先添加json包，然后继承json-default 
			protected Object findRootObject(ActionInvocation invocation)
			{
				//如果配置root，则把root指定值转换为json格式
				if(this.root!null){
					Valuestack stack=invocation.getStack();
					rootObject = stack.findValue(this.root);	
				}else{
				//如果没有配置ROOT，则把值栈中栈顶对象转化为json格式
				rootObject=invocation.getStack().peek();
				}
				return rootObject;
			}
			-->
			<result name="jsonMap" type="json">
				<!-- 要转换成json格式的数据 -->
				<param name="root">pageMap</param>
				<param name="excludeProperties">
					rows\[\d+\]\.account\.pass,rows\[\d+\]\.account\.name
				</param>
			</result>
			<result name="stream" type="stream">
				<param name="inputName">inputStream</param>
			</result>
		</action>
		<action name="account_*" class="accountAction" method="{1}">
			<result name="index">/index.jsp</result>
			<result name="jsonList" type="json">
				<param name="root">jsonList</param>
				<param name="excludeProperties">
					<!-- [0].pass,[1].pass -->
					\[\d+\]\.pass,\[\d+\]\.name
				</param>
			</result>
		</action>
		<action name="product_*" class="productAction" method="{1}">
			<result name="jsonMap" type="json">
				<!-- 要转换成json格式的数据 -->
				<param name="root">pageMap</param>
				<param name="excludeProperties">
					<!-- rows[0].category.account,rows[0].date -->
					rows\[\d+\]\.category\.account,
					rows\[\d+\]\.date
				</param>
			</result>
		</action>		
		<!-- 用来完成系统请求转发的Action,所有的请求交给execute -->
		<action name="send_*_*" class="sendAction">
			<result name="send">/WEB-INF/{1}/{2}.jsp</result>
		</action>
	</package>
</struts>    
